[color]
status = auto

[color "status"]
added = green
changed = yellow
untracked = red 
deleted = red

[color "branch"]
current = yellow bold
local = green bold
remote = cyan bold

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
whitespace = red reverse




#############################################
En versiones viejas 1.9 para abajo las
configuraciones que si funcionan son estas

[color]
	diff = auto
	status = auto
	branch = auto



# comando para setearlas
git config --global color.{var} auto

donde var puede ser diff, status, branch, etc.
